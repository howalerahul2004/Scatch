<%- include('./partials/header') %>

<% if(typeof error !== 'undefined' && error.length > 0){ %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500 z-50">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= error %>
        </span>
    </div>
<% } %>

<div class="w-full h-screen flex items-center justify-center bg-zinc-50">
    <div class="w-96">
        <h3 class="text-4xl mb-2"><span class="text-blue-400 font-semibold">ShopHub</span></h3>
        <h4 class="text-2xl font-bold mb-8">Create your account</h4>
        <form autocomplete="off" action="/users/register" method="post">
            <div class="mb-4">
                <label class="block text-sm font-medium mb-2" for="fullname">Full Name</label>
                <input
                    class="bg-zinc-100 w-full px-4 py-2 border-[1px] rounded-md border-zinc-300 focus:outline-none focus:border-blue-500"
                    type="text" placeholder="Enter your full name" name="fullname" required>
            </div>
            <div class="mb-4">
                <label class="block text-sm font-medium mb-2" for="email">Email</label>
                <input
                    class="bg-zinc-100 w-full px-4 py-2 border-[1px] rounded-md border-zinc-300 focus:outline-none focus:border-blue-500"
                    type="email" placeholder="Enter your email" name="email" required>
            </div>
            <div class="mb-6">
                <label class="block text-sm font-medium mb-2" for="password">Password</label>
                <input
                    class="bg-zinc-100 w-full px-4 py-2 border-[1px] rounded-md border-zinc-300 focus:outline-none focus:border-blue-500"
                    type="password" placeholder="Enter password" name="password" required>
            </div>
            <button class="w-full px-5 py-2 mt-2 bg-blue-500 text-white rounded-full font-semibold hover:bg-blue-600 transition" type="submit">
                Create My Account
            </button>
        </form>
        <div class="mt-6 text-center">
            <p class="text-sm text-gray-600">Already have an account? <a href="/users/login" class="text-blue-500 font-semibold hover:text-blue-700">Login here</a></p>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
