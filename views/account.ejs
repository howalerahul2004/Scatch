<%- include('./partials/header') %>

<div class="w-full min-h-screen bg-zinc-50 py-20">
    <div class="max-w-2xl mx-auto px-6">
        <h1 class="text-4xl font-bold mb-10">My Account</h1>

        <div class="bg-white rounded-lg shadow-md p-8">
            <div class="mb-8">
                <h2 class="text-2xl font-semibold mb-6 border-b pb-4">Account Information</h2>
                <div class="space-y-4">
                    <div class="grid grid-cols-2 gap-6">
                        <div>
                            <label class="text-gray-600 text-sm">Full Name</label>
                            <p class="text-lg font-semibold"><%= user.fullname %></p>
                        </div>
                        <div>
                            <label class="text-gray-600 text-sm">Email</label>
                            <p class="text-lg font-semibold"><%= user.email %></p>
                        </div>
                    </div>
                    <div>
                        <label class="text-gray-600 text-sm">Contact Number</label>
                        <p class="text-lg font-semibold"><%= user.contact || 'Not provided' %></p>
                    </div>
                </div>
            </div>

            <div class="mb-8">
                <h2 class="text-2xl font-semibold mb-6 border-b pb-4">Shopping Statistics</h2>
                <div class="grid grid-cols-2 gap-6">
                    <div class="bg-blue-50 p-4 rounded">
                        <p class="text-gray-600 text-sm mb-2">Total Orders</p>
                        <p class="text-3xl font-bold text-blue-600"><%= user.orders ? user.orders.length : 0 %></p>
                    </div>
                    <div class="bg-green-50 p-4 rounded">
                        <p class="text-gray-600 text-sm mb-2">Cart Items</p>
                        <p class="text-3xl font-bold text-green-600"><%= user.cart ? user.cart.length : 0 %></p>
                    </div>
                </div>
            </div>

            <div class="flex gap-4">
                <a href="/shop" class="px-6 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition">
                    Continue Shopping
                </a>
                <a href="/cart" class="px-6 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600 transition">
                    View Cart
                </a>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
