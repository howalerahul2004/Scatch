<%- include('./partials/header') %>

<div class="w-full min-h-screen px-20 py-20">
    <h1 class="text-3xl font-bold mb-8">My Wishlist</h1>
    
    <% if(products && products.length > 0) { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <% products.forEach(product => { %>
                <div class="border rounded-lg overflow-hidden hover:shadow-lg transition">
                    <div class="product-image flex justify-center items-center" data-bgcolor="<%= product.bgcolor %>" style="width: 100%; height: 200px;">
                        <% if(product.image) { %>
                            <% if(typeof product.image === 'string') { %>
                                <img class="h-40 object-contain" src="<%= product.image %>" alt="<%= product.name %>">
                            <% } else { %>
                                <img class="h-40 object-contain" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
                            <% } %>
                        <% } else { %>
                            <div class="text-gray-400">No Image</div>
                        <% } %>
                    </div>
                    <div class="product-info flex flex-col px-4 py-4" data-panecolor="<%= product.panecolor %>" data-textcolor="<%= product.textcolor %>">
                        <h3 class="font-semibold mb-2"><%= product.name %></h3>
                        <div class="flex items-center gap-2 mb-4">
                            <span class="line-through text-gray-500 text-sm">₹<%= product.price %></span>
                            <span class="font-bold">₹<%= product.price - product.discount %></span>
                        </div>
                        <div class="flex gap-2">
                            <a href="/addtocart/<%= product._id %>" class="flex-1 px-3 py-2 bg-blue-500 text-white text-center rounded text-sm hover:bg-blue-600 transition">
                                Add to Cart
                            </a>
                            <a href="/removefromwishlist/<%= product._id %>" class="flex-1 px-3 py-2 bg-red-500 text-white text-center rounded text-sm hover:bg-red-600 transition">
                                Remove
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="text-center py-20">
            <p class="text-gray-500 text-lg mb-4">Your wishlist is empty</p>
            <a href="/shop" class="inline-block px-6 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition">
                Continue Shopping
            </a>
        </div>
    <% } %>
</div>

<script>
    document.querySelectorAll('.product-image[data-bgcolor]').forEach(el => {
        el.style.backgroundColor = el.getAttribute('data-bgcolor');
    });
    document.querySelectorAll('.product-info[data-panecolor]').forEach(el => {
        el.style.backgroundColor = el.getAttribute('data-panecolor');
        el.style.color = el.getAttribute('data-textcolor');
    });
</script>

<%- include('./partials/footer') %>

