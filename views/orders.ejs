<%- include('./partials/header') %>

<div class="w-full min-h-screen px-20 py-20">
    <h1 class="text-3xl font-bold mb-8">My Orders</h1>
    
    <% if(orders && orders.length > 0) { %>
        <div class="space-y-4">
            <% orders.forEach(order => { %>
                <div class="border rounded-lg p-6 hover:shadow-lg transition">
                    <div class="flex justify-between items-start mb-4">
                        <div>
                            <h3 class="text-xl font-semibold">Order #<%= order._id.toString().slice(-8).toUpperCase() %></h3>
                            <p class="text-gray-600 text-sm">Placed on <%= new Date(order.createdAt).toLocaleDateString() %></p>
                        </div>
                        <% 
                            let statusColor = '#FFA500';
                            if(order.status === 'pending') statusColor = '#FFA500';
                            else if(order.status === 'confirmed') statusColor = '#4169E1';
                            else if(order.status === 'shipped') statusColor = '#9370DB';
                            else if(order.status === 'delivered') statusColor = '#28A745';
                            else statusColor = '#DC3545';
                        %>
                        <span class="px-4 py-2 rounded-full text-white text-sm font-semibold status-badge" data-bg="<%= statusColor %>">
                            <%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %>
                        </span>
                    </div>
                    </div>
                    
                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div>
                            <p class="text-gray-600 text-sm">Items: <%= order.products.length %></p>
                            <p class="text-gray-600 text-sm">Total MRP: ₹<%= order.totalMRP %></p>
                        </div>
                        <div>
                            <p class="text-gray-600 text-sm">Discount: -₹<%= order.totalDiscount %></p>
                            <p class="text-lg font-bold">Total: ₹<%= order.totalAmount %></p>
                        </div>
                    </div>
                    
                    <div class="flex gap-4">
                        <a href="/order/<%= order._id %>" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition">
                            View Details
                        </a>
                        <% if(order.status === 'delivered') { %>
                            <button class="px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600 transition">
                                Leave Review
                            </button>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="text-center py-20">
            <p class="text-gray-500 text-lg mb-4">You have no orders yet</p>
            <a href="/shop" class="inline-block px-6 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition">
                Continue Shopping
            </a>
        </div>
    <% } %>
</div>

<script>
    document.querySelectorAll('.status-badge[data-bg]').forEach(el => {
        el.style.backgroundColor = el.getAttribute('data-bg');
    });
</script>

<%- include('./partials/footer') %>
